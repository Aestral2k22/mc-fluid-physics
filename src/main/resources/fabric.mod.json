{
  "schemaVersion": 1,
  "id": "fluidphysics",
  "version": "${version}",
  "name": "Fluid Physics",
  "description": "This mod makes fluids flow but preserves most of the vanilla fluid physics.",
  "authors": [
    "LolHens"
  ],
  "contact": {
    "homepage": "https://github.com/LolHens/mc-fluid-physics",
    "sources": "https://github.com/LolHens/mc-fluid-physics"
  },
  "license": "Apache-2.0",
  "icon": "assets/fluidphysics/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "scala",
        "value": "de.lolhens.fluidphysics.FluidPhysicsMod"
      }
    ]
  },
  "mixins": [
    "fluidphysics.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "requires": {
    "fabric-language-scala": "*"
  }
}
